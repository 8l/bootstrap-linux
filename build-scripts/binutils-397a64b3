url=http://landley.net/aboriginal/mirror/$name-$version.tar.bz2

patches=binutils-screwinfo.patch

CFLAGS="$CFLAGS -ffunction-sections -fdata-sections"
LDFLAGS="$LDFLAGS -Wl,--gc-sections"

config() {
	munge-config-sub
	./configure --host=$A-unknown-linux-musl --target=$A-unknown-linux-musl --prefix=/ \
		--disable-werror --disable-shared --disable-nls --disable-install-libbfd
}

install() {
	make install-gas install-ld install-binutils DESTDIR="$out"
}
